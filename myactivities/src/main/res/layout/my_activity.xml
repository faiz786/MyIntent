<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ma_global_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="pl.mareklangiewicz.myactivities.MyActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/ma_global_coordinator_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/ma_app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                >

                <android.support.v7.widget.Toolbar
                    android:id="@+id/ma_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="?attr/colorPrimary"
                    />

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.DrawerLayout
                android:id="@+id/ma_local_drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <FrameLayout
                    android:id="@+id/ma_local_frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <pl.mareklangiewicz.myviews.MyNavigationView
                    android:id="@+id/ma_local_navigation_view"
                    android:layout_width="@dimen/my_local_navigation_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    />

            </android.support.v4.widget.DrawerLayout>


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ma_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_black_24dp"
            app:elevation="3dp"
            app:borderWidth="0dp"
            />
        <!-- TODO later: remove borderWidth attribute when design lib is fixed. -->
        <!-- TODO later: check default icon size. -->


    </android.support.design.widget.CoordinatorLayout>

    <pl.mareklangiewicz.myviews.MyNavigationView
        android:id="@+id/ma_global_navigation_view"
        android:layout_width="@dimen/my_global_navigation_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        />


</android.support.v4.widget.DrawerLayout>
