<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mgf_global_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="pl.mareklangiewicz.myfragments.MyGlobalFragment"
    >

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/mgf_coordinator_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/mgf_app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                >

                <android.support.v7.widget.Toolbar
                    android:id="@+id/mgf_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="?attr/colorPrimary"
                    />

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.DrawerLayout
                android:id="@+id/mgf_local_drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <FrameLayout
                    android:id="@+id/mgf_local_frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <pl.mareklangiewicz.myviews.MyNavigationView
                    android:id="@+id/mgf_local_navigation_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    />

            </android.support.v4.widget.DrawerLayout>


        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <pl.mareklangiewicz.myviews.MyNavigationView
        android:id="@+id/mgf_global_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        />


</android.support.v4.widget.DrawerLayout>
