<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="pl.mareklangiewicz.myfragments.MyPieTestsFragment"
    >

    <pl.mareklangiewicz.myviews.MyPie
        android:id="@+id/pie1"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        />
    <pl.mareklangiewicz.myviews.MyPie
        android:id="@+id/pie2"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:pieColor="@android:color/holo_red_dark"
        app:ovalColor="@color/cardview_light_background"
        tools:ignore="UnusedAttribute"
        />
    <pl.mareklangiewicz.myviews.MyPie
        android:id="@+id/pie3"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:pieColor="@android:color/holo_orange_dark"
        app:ovalColor="@color/cardview_light_background"
        />
    <pl.mareklangiewicz.myviews.MyPie
        android:id="@+id/pie4"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:pieColor="@android:color/holo_blue_dark"
        app:ovalColor="@color/cardview_light_background"
        app:from="12"
        app:to="88"
        />
</LinearLayout>
