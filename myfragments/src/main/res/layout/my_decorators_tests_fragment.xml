<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.mareklangiewicz.myfragments.MyDecoratorsTestsFragment">
    <pl.mareklangiewicz.myviews.MyLLDecorator
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:decoration="@layout/example_decoration"
        >
        <pl.mareklangiewicz.myviews.MyPie
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <pl.mareklangiewicz.myviews.MyPie
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <pl.mareklangiewicz.myviews.MyPie
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/blabla"/>
    </pl.mareklangiewicz.myviews.MyLLDecorator>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <pl.mareklangiewicz.myviews.MyPie
            android:tag="decorate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:pieColor="?attr/colorPrimaryDark"
            app:from="70"
            app:to="95"
            tools:ignore="NestedWeights" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <pl.mareklangiewicz.myviews.MyPie
                android:tag="decorate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:pieColor="?attr/colorAccent"
                app:from="20"
                />
            <pl.mareklangiewicz.myviews.MyPie
                android:tag="decorate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:to="80"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
